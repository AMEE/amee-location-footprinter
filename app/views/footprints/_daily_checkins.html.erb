  <% unless legs.blank? %>
<li>

  <h4><%= day %></h4>
  <ul>

    <% legs.each do |leg| %>
    <li class="row">
      <div class="span3">
        <%= image_tag leg.end_checkin.icon %>
        <%= leg.end_checkin.venue_name %>
      </div>
      <div class="span2">
        <%= image_tag('email/car.jpg') %>
      </div>

      <div class="span3">
        <%= image_tag leg.start_checkin.icon %>
        <%= leg.start_checkin.venue_name %>
      </div>

      <div class="span2">
        <p><%= number_with_precision(leg.distance, :precision => 2) %></p>
        <p><%= number_with_precision(leg.co2, :precision => 2) %> kg</p>
      </div>

    </li>
    <% end %>
  </ul>
</li>
  <% end %>