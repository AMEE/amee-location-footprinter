<h3>Checkins between <%= @given_week_before.strftime("%d %b %Y") %> and <%= @given_week.strftime("%d %b %Y") %></h3>
<%= link_to "back a week", "/legs/#{@given_week_before.strftime("%Y-%m-%d")}" %>
<%= link_to "forward a week", "/legs/#{(@given_week+1.week).strftime("%Y-%m-%d")}" %>


<ul class="span16 list_checkins">

<%= render :partial => 'daily_checkins', :locals => {:day => "Sunday", :legs => @sunday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Saturday", :legs => @saturday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Friday", :legs => @friday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Thursday", :legs => @thursday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Wednesday", :legs => @wednesday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Tuesday", :legs => @tuesday_legs } %>
<%= render :partial => 'daily_checkins', :locals => {:day => "Monday", :legs => @monday_legs } %>

</ul>